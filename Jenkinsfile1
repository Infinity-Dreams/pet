pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  
   stages {
    
    stage('Building our image') {
            steps {
                script {
                    dockerImage = docker.build "st251/testtag:$BUILD_NUMBER + ":latest""
                }
            }
        }
    stage('Deploy our image') {
            steps {
                script {
                   
                    docker.withRegistry('' , 'dockerhub-cred-st251') {
                        dockerImage.push()
                    }
                }
            }
        } 
  }
   
}
